RewriteEngine On

# Redirect /sitemap.xml to sitemap.php
RewriteRule ^sitemap\.xml$ sitemap.php [L]

# Redirect /post/slug to post.php?slug=slug
RewriteRule ^post/([^/]+)\.html$ post.php?slug=$1 [L]

# Redirect /admin to admin/dashboard.php
RewriteRule ^admin$ admin/dashboard.php [L]


# Security headers
<IfModule mod_headers.c>
    Header always set X-Frame-Options DENY
    Header always set X-Content-Type-Options nosniff
    Header always set Referrer-Policy strict-origin-when-cross-origin
</IfModule>

# Prevent access to sensitive files
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

<Files "*.md">
    Order allow,deny
    Deny from all
</Files>